{
  "name": "movie-app",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "author": "Rander Carlos<randerccf@gmail.com>",
  "scripts": {
    "prepare": "lefthook install",
    "dev": "vite",
    "preview": "run-p build preview-only",
    "build": "run-p type-check build-only",
    "preview-only": "vite preview --mode production --clearScreen --debug true --logLevel info",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit",
    "test": "run-p test:unit test:e2e",
    "test:ci": "run-p test:unit:ci test:e2e:ci",
    "test:unit": "vitest --reporter=verbose",
    "test:unit:ui": "vitest --ui --coverage.enabled=true",
    "test:unit:ci": "vitest run --reporter=dot",
    "test:unit:coverage": "vitest run --coverage --coverage.enabled=true",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:ci": "playwright test --reporter=dot",
    "test:e2e:list": "playwright test --list",
    "test:e2e:failed": "playwright test --last-failed --reporter=dot",
    "test:e2e:trace": "playwright test --trace on",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:codegen": "playwright codegen http://localhost:5173",
    "test:e2e:report": "playwright show-report test-results/playwright-report",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx --fix --ignore-path .gitignore",
    "commitlint": "commit"
  },
  "lint-staged": {
    "*.{vue,js,jsx,cjs,mjs,ts,tsx}": "eslint --ignore-path .gitignore"
  },
  "dependencies": {
    "@unocss/reset": "^0.60.2",
    "@vueuse/components": "^10.10.0",
    "@vueuse/core": "^10.9.0",
    "collect.js": "^4.36.1",
    "moment": "^2.30.1",
    "notivue": "^2.4.4",
    "vue": "^3.4.21",
    "vue-i18n": "9",
    "vue-router": "^4.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/prompt-cli": "^19.3.1",
    "@html-eslint/eslint-plugin": "^0.24.1",
    "@html-eslint/parser": "^0.24.1",
    "@iconify-json/carbon": "^1.1.36",
    "@playwright/test": "^1.45.3",
    "@rushstack/eslint-patch": "^1.8.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.12.5",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "@unocss/preset-icons": "^0.61.0",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/test-utils": "^2.4.5",
    "@vue/tsconfig": "^0.5.1",
    "dumper.js": "^1.3.1",
    "eslint": "^8.57.0",
    "eslint-plugin-html": "^8.1.1",
    "eslint-plugin-playwright": "^1.5.4",
    "eslint-plugin-vue": "^9.26.0",
    "jsdom": "^24.0.0",
    "lefthook": "^1.6.11",
    "lint-staged": "^15.2.2",
    "nock": "14.0.0-beta.6",
    "npm-run-all2": "^6.1.2",
    "typescript": "~5.4.0",
    "unocss": "^0.60.2",
    "vite": "^5.2.8",
    "vite-plugin-checker": "^0.6.4",
    "vite-plugin-vue-devtools": "^7.0.25",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.4.0",
    "vue-router-mock": "^1.1.0",
    "vue-tsc": "^1.8.22"
  }
}
